{% if is_mac %}
shell /opt/homebrew/bin/fish
{% else %}
shell /usr/bin/fish
{% endif %}
font_family {{ fixed_font_family }}
font_size 16
disable_ligatures never
adjust_line_height 125%
adjust_column_width 100%
start_as_fullscreen yes

map cmd+shift+c  copy_to_clipboard
map cmd+shift+v  paste_from_clipboard

map cmd+c        send_text all \x03
map cmd+z        send_text all \x1A

# Theme colors
foreground #E6E6E6
background #1E1E1E
cursor #E6E6E6

# Normal colors
color0 #1E1E1E
color1 #E06C75
color2 #98C379
color3 #E5C07B
color4 #9CDCFE
color5 #C678DD
color6 #56B6C2
color7 #BBBBBB

# Bright colors 
color8 #666666
color9 #E06C75
color10 #98C379
color11 #E5C07B
color12 #9CDCFE
color13 #C678DD
color14 #56B6C2
color15 #F8F8F8

url_color #9CDCFE
