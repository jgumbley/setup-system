# bind C-a send-prefix

# Enable mouse mode
set -g mouse on

# Start window numbering at 1
set -g base-index 1
setw -g pane-base-index 1

# Reload config file
bind r source-file ~/.tmux.conf \; display "Config reloaded!"

# Split panes using | and -
bind | split-window -h
bind - split-window -v
unbind '"'
unbind %

# New tab (window) with C-t
bind-key -n C-t new-window

# Switch windows with C-\ and C-]
bind-key -n C-\\ previous-window
bind-key -n C-] next-window

# Quick pane cycling
unbind ^A
bind ^A select-pane -t :.+


# Enable vi mode
setw -g mode-keys vi

# Setup 'v' to begin selection as in Vim
bind-key -Tcopy-mode-vi 'v' send -X begin-selection
bind-key -Tcopy-mode-vi 'y' send -X copy-selection

# Smart pane switching with awareness of vim splits
bind -n C-h run "(tmux display-message -p '#{pane_current_command}' | grep -iqE '(^|\/)vim && tmux send-keys C-h) || tmux select-pane -L"
bind -n C-l run "(tmux display-message -p '#{pane_current_command}' | grep -iqE '(^|\/)vim && tmux send-keys C-l) || tmux select-pane -R"

# Increase scrollback buffer size
set -g history-limit 10000

# Set terminal to support 256 colors
set -g default-terminal "screen-256color"

# Set shell based on platform  
set -g default-shell {{ tmux_shell }}
set -g default-command "exec {{ tmux_shell }}"

# Status bar
set -g status-position bottom
set -g status-style bg={{ theme_colors.background }},fg={{ theme_colors.foreground }}
set -g status-left ''
set -g status-right '#[fg={{ theme_colors.clock_text }},bg={{ theme_colors.clock_time_bg }},bold] <#h> '
set -g status-right-length 50
set -g status-left-length 20

# Window status
setw -g window-status-format "#[fg={{ theme_colors.text_bright }},bg={{ theme_colors.background }}]  #I #W  "
setw -g window-status-current-format "#[fg={{ theme_colors.background }},bg={{ theme_colors.info }}]#[fg={{ theme_colors.background }},bg={{ theme_colors.info }},noreverse,bold] #I #W #[fg={{ theme_colors.info }},bg={{ theme_colors.background }},nobold]"

# Messages
set -g message-style fg={{ theme_colors.foreground }},bg={{ theme_colors.secondary }},bold

# Pane borders
set -g pane-border-style fg=default
set -g pane-active-border-style fg=default

# No delay for escape key press
set -sg escape-time 0
