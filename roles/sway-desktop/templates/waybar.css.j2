#waybar {
    font-family: '{{ fixed_font_family }}';
    font-size: {{ terminal_settings.font_size }}pt;
    font-weight: normal;
    background-color: {{ theme_colors.background }};
    color: {{ theme_colors.foreground }};
    border: 1px solid {{ theme_colors.border }};
}

#waybar .module {
    color: {{ theme_colors.foreground }};
    margin: 0 4px;
    padding: 0 6px;
}

#waybar .module:hover {
    background-color: {{ theme_colors.surface }};
}

/* Specific styling for the workspace module */
#workspaces button {
    color: {{ theme_colors.foreground }};
    background: none;
}

#workspaces button.focused {
    background-color: {{ theme_colors.surface }};
    border: 1px solid {{ theme_colors.primary }};
    color: {{ theme_colors.primary }};
}

#workspaces button.urgent {
    background-color: {{ theme_colors.primary }};
    color: {{ theme_colors.foreground }};
}

/* Module styling */
#clock {
    color: {{ theme_colors.secondary }};
}

#battery {
    color: {{ theme_colors.syntax.number }};
}

#battery.warning {
    color: {{ theme_colors.warning }};
}

#battery.critical {
    color: {{ theme_colors.primary }};
}

#battery.charging,
#battery.plugged {
    color: {{ theme_colors.success }};
}

#network {
    color: {{ theme_colors.success }};
}

#pulseaudio {
    color: {{ theme_colors.info }};
}

a {
    color: {{ theme_colors.secondary }};
    text-decoration: none;
    transition: color 0.2s;
}

a:hover {
    color: {{ theme_colors.warning }};
}

/* Match tmux: dark grey date, lighter grey time, black-like text */
#clock.date {
    background-color: {{ theme_colors.clock_date_bg }};
    color: {{ theme_colors.clock_text }};
    font-weight: bold;
}

#clock.time {
    background-color: {{ theme_colors.clock_time_bg }};
    color: {{ theme_colors.clock_text }};
    font-weight: bold;
}
